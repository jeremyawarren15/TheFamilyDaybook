@page "/DailyLogs"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using TheFamilyDaybook.Data
@using TheFamilyDaybook.Models
@using TheFamilyDaybook.Web.Services
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject IDailyLogService DailyLogService
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Daily Logs</PageTitle>

<div class="max-w-7xl mx-auto">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-6">
        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Daily Logs</h1>
        <a href="/Students" class="btn-primary w-full sm:w-auto">
            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Add Daily Log
        </a>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger mb-6" role="alert">
            @ErrorMessage
        </div>
    }

    @if (dailyLogs != null && dailyLogs.Any())
    {
        <!-- Desktop Table View -->
        <div class="hidden md:block bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
            <div class="overflow-x-auto">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Student</th>
                            <th>Subject</th>
                            <th>Notes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in dailyLogs)
                        {
                            <tr>
                                <td>@log.Date.ToString("MM/dd/yyyy")</td>
                                <td class="font-medium">@log.Student.Name</td>
                                <td>@log.Subject.Name</td>
                                <td>@(string.IsNullOrWhiteSpace(log.Notes) ? "—" : (log.Notes.Length > 50 ? log.Notes[..50] + "..." : log.Notes))</td>
                                <td>
                                    <div class="flex space-x-2">
                                        <a href="/DailyLogs/Edit/@log.Id" class="btn-outline btn-sm">
                                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                            </svg>
                                            Edit
                                        </a>
                                        <button type="button" class="px-3 py-1.5 text-sm border-2 border-red-300 text-red-700 rounded-md font-medium transition-colors duration-200 hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2" @onclick="() => ShowDeleteConfirmation(log)">
                                            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                            Delete
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Mobile Card View -->
        <div class="md:hidden space-y-4">
            @foreach (var log in dailyLogs)
            {
                <div class="card">
                    <div class="card-body">
                        <div class="flex justify-between items-start mb-3">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900">@log.Student.Name</h3>
                                <p class="text-sm text-gray-600 mt-1">
                                    @log.Subject.Name • @log.Date.ToString("MM/dd/yyyy")
                                </p>
                            </div>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(log.Notes))
                        {
                            <p class="text-sm text-gray-700 mb-4">@(log.Notes.Length > 150 ? log.Notes[..150] + "..." : log.Notes)</p>
                        }
                        <div class="flex space-x-2">
                            <a href="/DailyLogs/Edit/@log.Id" class="btn-outline btn-sm flex-1 justify-center">
                                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                                Edit
                            </a>
                            <button type="button" class="px-3 py-1.5 text-sm border-2 border-red-300 text-red-700 rounded-md font-medium transition-colors duration-200 hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 flex-1 justify-center" @onclick="() => ShowDeleteConfirmation(log)">
                                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (dailyLogs != null)
    {
        <div class="alert alert-info">
            <p>No daily logs found. <a href="/Students" class="font-medium underline">Add your first daily log</a> to get started.</p>
        </div>
    }
    else
    {
        <p class="text-gray-600">Loading...</p>
    }
</div>

@if (logToDelete != null)
{
    <div class="modal">
        <div class="modal-backdrop" @onclick="CancelDelete"></div>
        <div class="modal-dialog">
            <div class="modal-content max-w-md mx-4">
                <div class="modal-header">
                    <h5 class="text-lg font-semibold text-gray-900">Confirm Delete</h5>
                    <button type="button" class="text-gray-400 hover:text-gray-600" @onclick="CancelDelete">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
                <div class="modal-body">
                    <p class="text-gray-700">Are you sure you want to delete the daily log for <strong>@logToDelete.Student.Name</strong> - <strong>@logToDelete.Subject.Name</strong> on <strong>@logToDelete.Date.ToString("MM/dd/yyyy")</strong>? This action cannot be undone.</p>
                </div>
                <div class="modal-footer flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3">
                    <button type="button" class="btn-secondary w-full sm:w-auto" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="bg-red-600 text-white px-4 py-2 rounded-md font-medium transition-colors duration-200 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 disabled:opacity-50 w-full sm:w-auto" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner spinner-sm inline-block mr-2"></span>
                        }
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<DailyLog>? dailyLogs;
    private ApplicationUser? currentUser;
    private DailyLog? logToDelete;
    private string? ErrorMessage;
    private bool isDeleting = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            currentUser = await UserManager.GetUserAsync(user);
            if (currentUser != null && currentUser.FamilyId.HasValue)
            {
                using var context = await DbContextFactory.CreateDbContextAsync();
                currentUser = await context.Users
                    .Include(u => u.Family!)
                    .ThenInclude(f => f.Students)
                    .FirstOrDefaultAsync(u => u.Id == currentUser.Id);

                if (currentUser?.FamilyId != null && currentUser.Family?.Students != null)
                {
                    var allLogs = new List<DailyLog>();
                    var family = currentUser.Family;
                    if (family != null)
                    {
                        foreach (var student in family.Students)
                        {
                            var studentLogs = await DailyLogService.GetDailyLogsForStudentAsync(student.Id);
                            allLogs.AddRange(studentLogs);
                        }
                        dailyLogs = allLogs.OrderByDescending(dl => dl.Date).ThenBy(dl => dl.Student.Name).ToList();
                    }
                }
            }
        }
    }

    private void ShowDeleteConfirmation(DailyLog log)
    {
        logToDelete = log;
    }

    private void CancelDelete()
    {
        logToDelete = null;
    }

    private async Task ConfirmDelete()
    {
        if (logToDelete == null)
            return;

        isDeleting = true;
        ErrorMessage = null;

        var result = await DailyLogService.DeleteDailyLogAsync(logToDelete.Id);

        if (result.Succeeded)
        {
            // Refresh the list
            if (currentUser?.FamilyId != null)
            {
                using var context = await DbContextFactory.CreateDbContextAsync();
                currentUser = await context.Users
                    .Include(u => u.Family!)
                    .ThenInclude(f => f.Students)
                    .FirstOrDefaultAsync(u => u.Id == currentUser.Id);

                if (currentUser?.Family?.Students != null)
                {
                    var allLogs = new List<DailyLog>();
                    var family = currentUser.Family;
                    if (family != null)
                    {
                        foreach (var student in family.Students)
                        {
                            var studentLogs = await DailyLogService.GetDailyLogsForStudentAsync(student.Id);
                            allLogs.AddRange(studentLogs);
                        }
                        dailyLogs = allLogs.OrderByDescending(dl => dl.Date).ThenBy(dl => dl.Student.Name).ToList();
                    }
                }
            }
            logToDelete = null;
        }
        else
        {
            ErrorMessage = result.ErrorMessage;
        }

        isDeleting = false;
    }
}
