@page "/Metrics/Edit/{MetricId:int}"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using System.Text.Json
@using TheFamilyDaybook.Data
@using TheFamilyDaybook.Models
@using TheFamilyDaybook.Web.Services
@using TheFamilyDaybook.Web.ViewModels
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject IMetricService MetricService
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Edit Metric</PageTitle>

<div class="max-w-2xl mx-auto px-4 sm:px-0">
    <div class="card">
        <div class="card-header">
            <h3 class="text-base sm:text-lg font-semibold text-gray-900">Edit Metric</h3>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger mb-6" role="alert">
                    @ErrorMessage
                </div>
            }

            @if (metric != null && !metric.IsTemplate)
            {
                <EditForm Model="@metricModel" OnValidSubmit="@HandleSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-red-600 mb-4" />

                    <div class="mb-4">
                        <label for="name" class="form-label">Name <span class="text-red-600">*</span></label>
                        <InputText id="name" class="form-input" @bind-Value="metricModel.Name" />
                        <ValidationMessage For="@(() => metricModel.Name)" />
                    </div>

                    <div class="mb-4">
                        <label for="description" class="form-label">Description</label>
                        <InputTextArea id="description" class="form-input" rows="3" @bind-Value="metricModel.Description" />
                        <ValidationMessage For="@(() => metricModel.Description)" />
                    </div>

                    <div class="mb-4">
                        <label for="metricType" class="form-label">Metric Type <span class="text-red-600">*</span></label>
                        <InputSelect id="metricType" class="form-input" @bind-Value="metricModel.MetricType">
                            <option value="@MetricType.Boolean">Boolean</option>
                            <option value="@MetricType.Categorical">Categorical</option>
                            <option value="@MetricType.Numeric">Numeric</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => metricModel.MetricType)" />
                    </div>

                    <div class="mb-4">
                        <label for="category" class="form-label">Category</label>
                        <InputText id="category" class="form-input" @bind-Value="metricModel.Category" />
                        <ValidationMessage For="@(() => metricModel.Category)" />
                        <small class="text-gray-500 text-sm mt-1 block">Optional category for grouping metrics (e.g., "Environmental", "Behavioral").</small>
                    </div>

                    @if (metricModel.MetricType == MetricType.Categorical)
                    {
                        <div class="mb-4">
                            <label for="possibleValues" class="form-label">Possible Values <span class="text-red-600">*</span></label>
                            <InputTextArea id="possibleValues" class="form-input" rows="4" @bind-Value="possibleValuesText" />
                            <small class="text-gray-500 text-sm mt-1 block">Enter one value per line (e.g., Morning, Afternoon, Evening).</small>
                        </div>
                    }

                    @if (metricModel.MetricType == MetricType.Numeric)
                    {
                        <div class="mb-4">
                            <label for="minValue" class="form-label">Minimum Value</label>
                            <InputNumber id="minValue" class="form-input" @bind-Value="minValue" />
                        </div>
                        <div class="mb-4">
                            <label for="maxValue" class="form-label">Maximum Value</label>
                            <InputNumber id="maxValue" class="form-input" @bind-Value="maxValue" />
                        </div>
                        <div class="mb-6">
                            <label for="unit" class="form-label">Unit</label>
                            <InputText id="unit" class="form-input" @bind-Value="unit" />
                            <small class="text-gray-500 text-sm mt-1 block">Optional unit (e.g., "minutes", "hours").</small>
                        </div>
                    }

                    <div class="flex flex-col sm:flex-row sm:justify-between gap-3">
                        <a href="/Metrics" class="btn-secondary text-center sm:text-left">Cancel</a>
                        <button type="submit" class="btn-primary w-full sm:w-auto" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner spinner-sm inline-block mr-2"></span>
                            }
                            Update Metric
                        </button>
                    </div>
                </EditForm>
            }
            else if (metric != null && metric.IsTemplate)
            {
                <div class="alert bg-yellow-50 text-yellow-800 border border-yellow-200 mb-6">
                    <p>Template metrics cannot be edited.</p>
                </div>
                <a href="/Metrics" class="btn-secondary">Back to Metrics</a>
            }
            else if (isLoading)
            {
                <p class="text-gray-600">Loading...</p>
            }
            else
            {
                <div class="alert alert-danger mb-6">
                    <p>Metric not found.</p>
                </div>
                <a href="/Metrics" class="btn-secondary">Back to Metrics</a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int MetricId { get; set; }

    private ApplicationUser? currentUser;
    private Metric? metric;
    private MetricModel metricModel = new();
    private string? ErrorMessage;
    private bool isLoading = false;
    private string possibleValuesText = string.Empty;
    private decimal? minValue;
    private decimal? maxValue;
    private string unit = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            currentUser = await UserManager.GetUserAsync(user);
            if (currentUser != null)
            {
                using var context = await DbContextFactory.CreateDbContextAsync();
                currentUser = await context.Users
                    .Include(u => u.Family)
                    .FirstOrDefaultAsync(u => u.Id == currentUser.Id);

                if (currentUser != null)
                {
                    metric = await MetricService.GetMetricByIdAsync(MetricId);

                    if (metric != null && currentUser.FamilyId.HasValue && metric.FamilyId != currentUser.FamilyId.Value)
                    {
                        metric = null;
                        ErrorMessage = "You do not have permission to edit this metric.";
                    }
                    else if (metric != null)
                    {
                        metricModel.Id = metric.Id;
                        metricModel.Name = metric.Name;
                        metricModel.Description = metric.Description;
                        metricModel.MetricType = metric.MetricType;
                        metricModel.Category = metric.Category;

                        // Parse possible values for categorical
                        if (metric.MetricType == MetricType.Categorical && !string.IsNullOrWhiteSpace(metric.PossibleValues))
                        {
                            try
                            {
                                var values = JsonSerializer.Deserialize<List<string>>(metric.PossibleValues);
                                if (values != null)
                                    possibleValuesText = string.Join("\n", values);
                            }
                            catch { }
                        }

                        // Parse numeric config
                        if (metric.MetricType == MetricType.Numeric && !string.IsNullOrWhiteSpace(metric.NumericConfig))
                        {
                            try
                            {
                                var config = JsonSerializer.Deserialize<Dictionary<string, object>>(metric.NumericConfig);
                                if (config != null)
                                {
                                    if (config.ContainsKey("Min") && decimal.TryParse(config["Min"].ToString(), out var min))
                                        minValue = min;
                                    if (config.ContainsKey("Max") && decimal.TryParse(config["Max"].ToString(), out var max))
                                        maxValue = max;
                                    if (config.ContainsKey("Unit"))
                                        unit = config["Unit"].ToString() ?? string.Empty;
                                }
                            }
                            catch { }
                        }
                    }
                    else
                    {
                        ErrorMessage = "Metric not found.";
                    }
                }
            }
        }
    }

    private async Task HandleSubmit()
    {
        if (metric == null)
        {
            ErrorMessage = "Metric not found.";
            return;
        }

        ErrorMessage = null;
        isLoading = true;

        // Process possible values for categorical
        if (metricModel.MetricType == MetricType.Categorical)
        {
            if (string.IsNullOrWhiteSpace(possibleValuesText))
            {
                ErrorMessage = "Possible values are required for categorical metrics.";
                isLoading = false;
                return;
            }
            var values = possibleValuesText.Split('\n', StringSplitOptions.RemoveEmptyEntries)
                .Select(v => v.Trim())
                .Where(v => !string.IsNullOrWhiteSpace(v))
                .ToList();
            metricModel.PossibleValues = JsonSerializer.Serialize(values);
        }

        // Process numeric config
        if (metricModel.MetricType == MetricType.Numeric)
        {
            var numericConfig = new Dictionary<string, object>();
            if (minValue.HasValue)
                numericConfig["Min"] = minValue.Value;
            if (maxValue.HasValue)
                numericConfig["Max"] = maxValue.Value;
            if (!string.IsNullOrWhiteSpace(unit))
                numericConfig["Unit"] = unit;
            if (numericConfig.Any())
                metricModel.NumericConfig = JsonSerializer.Serialize(numericConfig);
        }

        var result = await MetricService.UpdateMetricAsync(metric.Id, metricModel);

        if (result.Succeeded)
        {
            NavigationManager.NavigateTo("/Metrics");
        }
        else
        {
            ErrorMessage = result.ErrorMessage;
            isLoading = false;
        }
    }
}
