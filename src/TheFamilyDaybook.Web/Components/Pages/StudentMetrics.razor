@page "/Students/{StudentId:int}/Metrics"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using TheFamilyDaybook.Data
@using TheFamilyDaybook.Models
@using TheFamilyDaybook.Web.Services
@using TheFamilyDaybook.Web.ViewModels
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject IStudentService StudentService
@inject IStudentMetricService StudentMetricService
@inject IStudentSubjectService StudentSubjectService
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Configure Metrics - @(student?.Name ?? "Student")</PageTitle>

<div class="max-w-7xl mx-auto px-4 sm:px-0">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-6">
        <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Configure Metrics</h1>
            <p class="text-gray-600 mt-1 text-sm sm:text-base">Student: <strong>@(student?.Name ?? "")</strong></p>
        </div>
        <a href="/Students" class="btn-secondary w-full sm:w-auto">
            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Students
        </a>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger mb-6" role="alert">
            @ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success mb-6" role="alert">
            @SuccessMessage
        </div>
    }

    @if (student != null && metricConfigs != null)
    {
        <div class="card mb-6">
            <div class="card-body">
                <p class="text-gray-600 mb-4 text-sm sm:text-base">
                    Configure which metrics apply to this student. Metrics can apply to all subjects or be configured per subject.
                </p>

                <EditForm OnValidSubmit="@HandleSubmit">
                    @if (metricConfigs.Any())
                    {
                        var groupedConfigs = metricConfigs.GroupBy(c => c.Category ?? "Other").OrderBy(g => g.Key);
                        
                        @foreach (var group in groupedConfigs)
                        {
                            <div class="mb-6">
                                <h5 class="text-base sm:text-lg font-semibold text-gray-900 mb-3">@group.Key</h5>
                                <!-- Desktop Table View -->
                                <div class="hidden md:block bg-white rounded-lg border border-gray-200 overflow-hidden">
                                    <div class="overflow-x-auto">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th class="w-[30%]">Metric</th>
                                                    <th class="w-[15%]">Type</th>
                                                    <th class="w-[20%]">Enabled</th>
                                                    <th class="w-[35%]">Applies To</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var config in group.OrderBy(c => c.MetricName))
                                                {
                                                    var index = metricConfigs.IndexOf(config);
                                                    <tr>
                                                        <td class="font-medium">@config.MetricName</td>
                                                        <td>@config.MetricType</td>
                                                        <td>
                                                            <div class="flex items-center">
                                                                <input type="checkbox" 
                                                                       class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 rounded focus:ring-burgundy focus:ring-2"
                                                                       checked="@config.IsEnabled"
                                                                       @onchange="@((ChangeEventArgs e) => UpdateConfigEnabled(index, e.Value?.ToString() == "True"))" />
                                                            </div>
                                                        </td>
                                                        <td>
                                                            @if (config.IsEnabled)
                                                            {
                                                                <div class="space-y-2">
                                                                    <div class="flex items-center">
                                                                        <input type="radio" 
                                                                               name="applies_@config.MetricId" 
                                                                               id="all_@config.MetricId"
                                                                               value="all"
                                                                               class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 focus:ring-burgundy focus:ring-2"
                                                                               checked="@(config.AppliesTo == "all")"
                                                                               @onchange="@((ChangeEventArgs e) => UpdateConfigAppliesTo(index, "all"))" />
                                                                        <label for="all_@config.MetricId" class="ml-2 text-sm text-gray-700 cursor-pointer">All Subjects</label>
                                                                    </div>
                                                                    <div class="flex items-center">
                                                                        <input type="radio" 
                                                                               name="applies_@config.MetricId" 
                                                                               id="specific_@config.MetricId"
                                                                               value="specific"
                                                                               class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 focus:ring-burgundy focus:ring-2"
                                                                               checked="@(config.AppliesTo == "specific")"
                                                                               @onchange="@((ChangeEventArgs e) => UpdateConfigAppliesTo(index, "specific"))" />
                                                                        <label for="specific_@config.MetricId" class="ml-2 text-sm text-gray-700 cursor-pointer">Specific Subjects</label>
                                                                    </div>
                                                                    @if (config.AppliesTo == "specific")
                                                                    {
                                                                        <a href="/Students/@StudentId/Subjects/@config.MetricId/Metrics" class="text-burgundy hover:text-burgundy-dark text-sm font-medium underline">
                                                                            Configure Subjects
                                                                        </a>
                                                                    }
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-gray-400 text-sm">â€”</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <!-- Mobile Card View -->
                                <div class="md:hidden space-y-4">
                                    @foreach (var config in group.OrderBy(c => c.MetricName))
                                    {
                                        var index = metricConfigs.IndexOf(config);
                                        <div class="card">
                                            <div class="card-body">
                                                <h6 class="font-semibold text-gray-900 mb-2">@config.MetricName</h6>
                                                <p class="text-sm text-gray-600 mb-3">Type: @config.MetricType</p>
                                                <div class="space-y-3">
                                                    <div class="flex items-center">
                                                        <input type="checkbox" 
                                                               class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 rounded focus:ring-burgundy focus:ring-2"
                                                               checked="@config.IsEnabled"
                                                               @onchange="@((ChangeEventArgs e) => UpdateConfigEnabled(index, e.Value?.ToString() == "True"))" />
                                                        <label class="ml-2 text-sm text-gray-700 cursor-pointer">Enabled</label>
                                                    </div>
                                                    @if (config.IsEnabled)
                                                    {
                                                        <div class="space-y-2 pl-6">
                                                            <div class="flex items-center">
                                                                <input type="radio" 
                                                                       name="applies_@config.MetricId" 
                                                                       id="all_@config.MetricId"
                                                                       value="all"
                                                                       class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 focus:ring-burgundy focus:ring-2"
                                                                       checked="@(config.AppliesTo == "all")"
                                                                       @onchange="@((ChangeEventArgs e) => UpdateConfigAppliesTo(index, "all"))" />
                                                                <label for="all_@config.MetricId" class="ml-2 text-sm text-gray-700 cursor-pointer">All Subjects</label>
                                                            </div>
                                                            <div class="flex items-center">
                                                                <input type="radio" 
                                                                       name="applies_@config.MetricId" 
                                                                       id="specific_@config.MetricId"
                                                                       value="specific"
                                                                       class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 focus:ring-burgundy focus:ring-2"
                                                                       checked="@(config.AppliesTo == "specific")"
                                                                       @onchange="@((ChangeEventArgs e) => UpdateConfigAppliesTo(index, "specific"))" />
                                                                <label for="specific_@config.MetricId" class="ml-2 text-sm text-gray-700 cursor-pointer">Specific Subjects</label>
                                                            </div>
                                                            @if (config.AppliesTo == "specific")
                                                            {
                                                                <a href="/Students/@StudentId/Subjects/@config.MetricId/Metrics" class="text-burgundy hover:text-burgundy-dark text-sm font-medium underline block mt-2">
                                                                    Configure Subjects
                                                                </a>
                                                            }
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <div class="flex flex-col sm:flex-row sm:justify-end gap-3 mt-6">
                            <button type="submit" class="btn-primary w-full sm:w-auto" disabled="@isLoading">
                                @if (isLoading)
                                {
                                    <span class="spinner spinner-sm inline-block mr-2"></span>
                                }
                                Save Changes
                            </button>
                        </div>
                    }
                    else
                    {
                        <p class="text-gray-600 text-sm sm:text-base">No metrics available. <a href="/Metrics" class="text-burgundy hover:text-burgundy-dark font-medium">Add metrics</a> first.</p>
                    }
                </EditForm>
            </div>
        </div>
    }
    else
    {
        <p class="text-gray-600">Loading...</p>
    }
</div>

@code {
    [Parameter]
    public int StudentId { get; set; }

    private ApplicationUser? currentUser;
    private Student? student;
    private List<StudentMetricConfigViewModel>? metricConfigs;
    private string? ErrorMessage;
    private string? SuccessMessage;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            currentUser = await UserManager.GetUserAsync(user);
            if (currentUser != null)
            {
                using var context = await DbContextFactory.CreateDbContextAsync();
                currentUser = await context.Users
                    .Include(u => u.Family)
                    .FirstOrDefaultAsync(u => u.Id == currentUser.Id);

                if (currentUser != null)
                {
                    student = await StudentService.GetStudentByIdAsync(StudentId);

                    if (student != null && currentUser.FamilyId.HasValue && student.FamilyId != currentUser.FamilyId.Value)
                    {
                        student = null;
                        ErrorMessage = "You do not have permission to configure metrics for this student.";
                    }
                    else if (student != null && currentUser.FamilyId.HasValue)
                    {
                        var configs = await StudentMetricService.GetMetricConfigurationsForStudentAsync(student.Id);
                        metricConfigs = configs.ToList();
                    }
                }
            }
        }
    }

    private void UpdateConfigEnabled(int index, bool enabled)
    {
        if (metricConfigs != null && index >= 0 && index < metricConfigs.Count)
        {
            metricConfigs[index].IsEnabled = enabled;
            if (!enabled)
            {
                metricConfigs[index].AppliesTo = null;
            }
            else if (string.IsNullOrEmpty(metricConfigs[index].AppliesTo))
            {
                metricConfigs[index].AppliesTo = "all";
            }
        }
    }

    private void UpdateConfigAppliesTo(int index, string appliesTo)
    {
        if (metricConfigs != null && index >= 0 && index < metricConfigs.Count)
        {
            metricConfigs[index].AppliesTo = appliesTo;
        }
    }

    private async Task HandleSubmit()
    {
        if (student == null || metricConfigs == null)
            return;

        ErrorMessage = null;
        SuccessMessage = null;
        isLoading = true;

        try
        {
            foreach (var config in metricConfigs)
            {
                if (config.IsEnabled)
                {
                    var result = await StudentMetricService.EnableMetricForStudentAsync(student.Id, config.MetricId, config.AppliesTo == "all");
                    if (!result.Succeeded)
                    {
                        ErrorMessage = result.ErrorMessage;
                        isLoading = false;
                        return;
                    }
                }
                else
                {
                    var result = await StudentMetricService.DisableMetricForStudentAsync(student.Id, config.MetricId);
                    if (!result.Succeeded)
                    {
                        ErrorMessage = result.ErrorMessage;
                        isLoading = false;
                        return;
                    }
                }
            }

            SuccessMessage = "Metrics configuration saved successfully.";
        }
        catch (Exception ex)
        {
            ErrorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }
}
