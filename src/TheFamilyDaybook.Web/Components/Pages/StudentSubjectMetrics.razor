@page "/Students/{StudentId:int}/Subjects/{SubjectId:int}/Metrics"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using TheFamilyDaybook.Data
@using TheFamilyDaybook.Models
@using TheFamilyDaybook.Web.Services
@using TheFamilyDaybook.Web.ViewModels
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject IStudentService StudentService
@inject ISubjectService SubjectService
@inject IStudentSubjectMetricService StudentSubjectMetricService
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Configure Metrics - @(student?.Name ?? "Student") - @(subject?.Name ?? "Subject")</PageTitle>

<div class="max-w-7xl mx-auto">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Configure Metrics</h1>
            <p class="text-gray-600 mt-1">Student: <strong>@(student?.Name ?? "")</strong> | Subject: <strong>@(subject?.Name ?? "")</strong></p>
        </div>
        <a href="/Students/@StudentId/Metrics" class="btn-secondary">
            <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Student Metrics
        </a>
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger mb-6" role="alert">
            @ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success mb-6" role="alert">
            @SuccessMessage
        </div>
    }

    @if (student != null && subject != null && metricConfigs != null)
    {
        <div class="card">
            <div class="card-body">
                <p class="text-gray-600 mb-4">
                    Configure which metrics apply to this student for this specific subject. 
                    Metrics marked with <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">All Subjects</span> are enabled for all subjects by default and can be overridden here.
                </p>

                <EditForm Model="@configForm" OnValidSubmit="@HandleSubmit">
                    @if (metricConfigs.Any())
                    {
                        var groupedConfigs = metricConfigs.GroupBy(c => c.Category ?? "Other").OrderBy(g => g.Key);
                        
                        @foreach (var group in groupedConfigs)
                        {
                            <div class="mb-6">
                                <h5 class="text-lg font-semibold text-gray-900 mb-3">@group.Key</h5>
                                <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">
                                    <div class="overflow-x-auto">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th class="w-[40%]">Metric</th>
                                                    <th class="w-[15%]">Type</th>
                                                    <th class="w-[20%]">Scope</th>
                                                    <th class="w-[25%]">Enabled</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var config in group.OrderBy(c => c.MetricName))
                                                {
                                                    var index = metricConfigs.IndexOf(config);
                                                    <tr>
                                                        <td class="font-medium">@config.MetricName</td>
                                                        <td>@config.MetricType</td>
                                                        <td>
                                                            @if (config.AppliesToAllSubjects)
                                                            {
                                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">All Subjects</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Per Subject</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <div class="flex items-center">
                                                                <input type="checkbox" 
                                                                       class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 rounded focus:ring-burgundy focus:ring-2"
                                                                       checked="@config.IsEnabled"
                                                                       @onchange="@((ChangeEventArgs e) => UpdateConfigEnabled(index, e.Value?.ToString() == "True"))" />
                                                            </div>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <p>No metrics available for this student. <a href="/Students/@StudentId/Metrics" class="font-medium underline">Configure metrics</a> at the student level first.</p>
                        </div>
                    }

                    <div class="flex justify-between mt-6">
                        <a href="/Students/@StudentId/Metrics" class="btn-secondary">Cancel</a>
                        <button type="submit" class="btn-primary" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner spinner-sm inline-block mr-2"></span>
                            }
                            Save Configuration
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }
    else if (isLoading)
    {
        <p class="text-gray-600">Loading...</p>
    }
    else
    {
        <div class="alert alert-danger">
            <p>Student or subject not found.</p>
        </div>
        <a href="/Students" class="btn-secondary">Back to Students</a>
    }
</div>

@code {
    [Parameter]
    public int StudentId { get; set; }

    [Parameter]
    public int SubjectId { get; set; }

    private ApplicationUser? currentUser;
    private Student? student;
    private Subject? subject;
    private List<StudentSubjectMetricConfigModel>? metricConfigs;
    private object configForm = new(); // Dummy form model
    private string? ErrorMessage;
    private string? SuccessMessage;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            currentUser = await UserManager.GetUserAsync(user);
            if (currentUser != null)
            {
                using var context = await DbContextFactory.CreateDbContextAsync();
                currentUser = await context.Users
                    .Include(u => u.Family)
                    .FirstOrDefaultAsync(u => u.Id == currentUser.Id);

                if (currentUser != null)
                {
                    student = await StudentService.GetStudentByIdAsync(StudentId);
                    subject = await SubjectService.GetSubjectByIdAsync(SubjectId);

                    if (student != null && currentUser.FamilyId.HasValue && student.FamilyId != currentUser.FamilyId.Value)
                    {
                        student = null;
                        ErrorMessage = "You do not have permission to configure metrics for this student.";
                    }
                    else if (subject != null && currentUser.FamilyId.HasValue && subject.FamilyId != currentUser.FamilyId.Value)
                    {
                        subject = null;
                        ErrorMessage = "You do not have permission to configure metrics for this subject.";
                    }
                    else if (student != null && subject != null && currentUser.FamilyId.HasValue)
                    {
                        metricConfigs = (await StudentSubjectMetricService.GetAvailableMetricsForStudentSubjectAsync(StudentId, SubjectId, currentUser.FamilyId.Value)).ToList();
                    }
                }
            }
        }
    }

    private void UpdateConfigEnabled(int index, bool isEnabled)
    {
        if (metricConfigs != null && index >= 0 && index < metricConfigs.Count)
        {
            metricConfigs[index].IsEnabled = isEnabled;
        }
    }

    private async Task HandleSubmit()
    {
        if (student == null || subject == null || metricConfigs == null)
        {
            ErrorMessage = "Invalid configuration.";
            return;
        }

        ErrorMessage = null;
        SuccessMessage = null;
        isLoading = true;

        var result = await StudentSubjectMetricService.SaveStudentSubjectMetricConfigAsync(StudentId, SubjectId, metricConfigs);

        if (result.Succeeded)
        {
            SuccessMessage = result.SuccessMessage ?? "Metrics configured successfully!";
            // Reload to get updated state
            if (currentUser?.FamilyId != null)
            {
                metricConfigs = (await StudentSubjectMetricService.GetAvailableMetricsForStudentSubjectAsync(StudentId, SubjectId, currentUser.FamilyId.Value)).ToList();
            }
        }
        else
        {
            ErrorMessage = result.ErrorMessage;
        }

        isLoading = false;
    }
}
