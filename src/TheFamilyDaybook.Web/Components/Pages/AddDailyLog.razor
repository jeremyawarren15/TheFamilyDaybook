@page "/Students/{StudentId:int}/Subjects/{SubjectId:int}/DailyLog/Add"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using System.Text.Json
@using TheFamilyDaybook.Data
@using TheFamilyDaybook.Models
@using TheFamilyDaybook.Web.Services
@using TheFamilyDaybook.Web.ViewModels
@attribute [Authorize]
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject IStudentService StudentService
@inject ISubjectService SubjectService
@inject IDailyLogService DailyLogService
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Add Daily Log - @(student?.Name ?? "Student") - @(subject?.Name ?? "Subject")</PageTitle>

<div class="max-w-4xl mx-auto px-4 sm:px-0">
    <div class="card">
        <div class="card-header">
            <h3 class="text-base sm:text-lg font-semibold text-gray-900">Add Daily Log</h3>
            <p class="text-gray-600 mt-1 text-sm sm:text-base">Student: <strong>@(student?.Name ?? "")</strong> | Subject: <strong>@(subject?.Name ?? "")</strong></p>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger mb-6" role="alert">
                    @ErrorMessage
                </div>
            }

            @if (student != null && subject != null && currentUser?.FamilyId != null)
            {
                <EditForm Model="@dailyLogModel" OnValidSubmit="@HandleSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-red-600 mb-4" />

                    <div class="mb-6">
                        <label for="date" class="form-label">Date <span class="text-red-600">*</span></label>
                        <InputDate id="date" class="form-input" @bind-Value="dailyLogModel.Date" />
                        <ValidationMessage For="@(() => dailyLogModel.Date)" />
                    </div>

                    @if (availableMetrics != null && availableMetrics.Any())
                    {
                        <div class="border-t border-gray-200 pt-6 mb-6">
                            <h4 class="text-base sm:text-lg font-semibold text-gray-900 mb-2">Metrics</h4>
                            <p class="text-gray-600 text-sm mb-4">Record values for the metrics configured for this student and subject.</p>

                            @foreach (var metric in availableMetrics)
                            {
                                var metricValue = dailyLogModel.MetricValues.FirstOrDefault(mv => mv.MetricId == metric.Id);
                                if (metricValue == null)
                                {
                                    metricValue = new MetricValueModel
                                    {
                                        MetricId = metric.Id,
                                        MetricName = metric.Name,
                                        MetricType = metric.MetricType,
                                        Category = metric.Category,
                                        PossibleValues = metric.PossibleValues,
                                        NumericConfig = metric.NumericConfig
                                    };
                                    dailyLogModel.MetricValues.Add(metricValue);
                                }

                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h6 class="font-semibold text-gray-900 mb-1 text-sm sm:text-base">@metric.Name</h6>
                                        @if (!string.IsNullOrWhiteSpace(metric.Description))
                                        {
                                            <p class="text-gray-600 text-sm mb-3">@metric.Description</p>
                                        }

                                        @if (metric.MetricType == MetricType.Boolean)
                                        {
                                            <div class="flex items-center space-x-4">
                                                <label class="flex items-center cursor-pointer">
                                                    <input type="radio" name="metric_@metric.Id" value="true" class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 focus:ring-burgundy focus:ring-2" checked="@(metricValue.BooleanValue == true)" @onchange="@((ChangeEventArgs e) => UpdateBooleanValue(metricValue, e.Value?.ToString() == "true"))" />
                                                    <span class="ml-2 text-sm text-gray-700">Yes</span>
                                                </label>
                                                <label class="flex items-center cursor-pointer">
                                                    <input type="radio" name="metric_@metric.Id" value="false" class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 focus:ring-burgundy focus:ring-2" checked="@(metricValue.BooleanValue == false)" @onchange="@((ChangeEventArgs e) => UpdateBooleanValue(metricValue, e.Value?.ToString() == "false"))" />
                                                    <span class="ml-2 text-sm text-gray-700">No</span>
                                                </label>
                                            </div>
                                        }
                                        else if (metric.MetricType == MetricType.Categorical)
                                        {
                                            List<string>? possibleValues = null;
                                            if (!string.IsNullOrWhiteSpace(metric.PossibleValues))
                                            {
                                                try
                                                {
                                                    possibleValues = JsonSerializer.Deserialize<List<string>>(metric.PossibleValues);
                                                }
                                                catch { }
                                            }

                                            if (possibleValues != null && possibleValues.Any())
                                            {
                                                <div class="space-y-2">
                                                    @foreach (var value in possibleValues)
                                                    {
                                                        <label class="flex items-center cursor-pointer">
                                                            <input type="radio" name="metric_@metric.Id" value="@value" class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 focus:ring-burgundy focus:ring-2" checked="@(metricValue.CategoricalValue == value)" @onchange="@((ChangeEventArgs e) => UpdateCategoricalValue(metricValue, e.Value?.ToString()))" />
                                                            <span class="ml-2 text-sm text-gray-700">@value</span>
                                                        </label>
                                                    }
                                                </div>
                                            }
                                        }
                                        else if (metric.MetricType == MetricType.Numeric)
                                        {
                                            Dictionary<string, object>? numericConfig = null;
                                            if (!string.IsNullOrWhiteSpace(metric.NumericConfig))
                                            {
                                                try
                                                {
                                                    numericConfig = JsonSerializer.Deserialize<Dictionary<string, object>>(metric.NumericConfig);
                                                }
                                                catch { }
                                            }

                                            <div class="flex flex-col sm:flex-row sm:items-center gap-2">
                                                <InputNumber class="form-input flex-1" @bind-Value="metricValue.NumericValue" placeholder="Enter value" />
                                                @if (numericConfig != null && numericConfig.ContainsKey("Unit"))
                                                {
                                                    <span class="text-sm text-gray-600">@numericConfig["Unit"]</span>
                                                }
                                            </div>
                                            @if (numericConfig != null)
                                            {
                                                <small class="text-gray-500 text-xs mt-1 block">
                                                    @if (numericConfig.ContainsKey("Min") && numericConfig.ContainsKey("Max"))
                                                    {
                                                        <text>Range: @numericConfig["Min"] - @numericConfig["Max"]</text>
                                                    }
                                                    else if (numericConfig.ContainsKey("Min"))
                                                    {
                                                        <text>Minimum: @numericConfig["Min"]</text>
                                                    }
                                                    else if (numericConfig.ContainsKey("Max"))
                                                    {
                                                        <text>Maximum: @numericConfig["Max"]</text>
                                                    }
                                                </small>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <div class="mb-6">
                        <label for="notes" class="form-label">Notes</label>
                        <InputTextArea id="notes" class="form-input" rows="4" @bind-Value="dailyLogModel.Notes" />
                        <ValidationMessage For="@(() => dailyLogModel.Notes)" />
                        <small class="text-gray-500 text-sm mt-1 block">Optional notes about this daily log entry.</small>
                    </div>

                    <div class="flex flex-col sm:flex-row sm:justify-between gap-3">
                        <a href="/Students/@StudentId/DailyLog/SelectSubject" class="btn-secondary text-center sm:text-left">Cancel</a>
                        <button type="submit" class="btn-primary w-full sm:w-auto" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner spinner-sm inline-block mr-2"></span>
                            }
                            Add Daily Log
                        </button>
                    </div>
                </EditForm>
            }
            else if (isLoading)
            {
                <p class="text-gray-600">Loading...</p>
            }
            else
            {
                <div class="alert alert-danger mb-6">
                    <p>Student or subject not found.</p>
                </div>
                <a href="/Students" class="btn-secondary">Back to Students</a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int StudentId { get; set; }

    [Parameter]
    public int SubjectId { get; set; }

    private ApplicationUser? currentUser;
    private Student? student;
    private Subject? subject;
    private List<Metric>? availableMetrics;
    private DailyLogModel dailyLogModel = new();
    private string? ErrorMessage;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            currentUser = await UserManager.GetUserAsync(user);
            if (currentUser != null)
            {
                using var context = await DbContextFactory.CreateDbContextAsync();
                currentUser = await context.Users
                    .Include(u => u.Family)
                    .FirstOrDefaultAsync(u => u.Id == currentUser.Id);

                if (currentUser != null)
                {
                    student = await StudentService.GetStudentByIdAsync(StudentId);
                    subject = await SubjectService.GetSubjectByIdAsync(SubjectId);

                    if (student != null && subject != null && currentUser.FamilyId.HasValue)
                    {
                        if (student.FamilyId != currentUser.FamilyId.Value || subject.FamilyId != currentUser.FamilyId.Value)
                        {
                            student = null;
                            subject = null;
                            ErrorMessage = "You do not have permission to access this student or subject.";
                        }
                        else
                        {
                            dailyLogModel.Date = DateTime.Today;
                            dailyLogModel.StudentId = student.Id;
                            dailyLogModel.SubjectId = subject.Id;

                            // Load available metrics for this student and subject
                            var studentMetrics = await DailyLogService.GetAvailableMetricsForDailyLogAsync(student.Id, subject.Id, currentUser.FamilyId.Value);
                            availableMetrics = studentMetrics.ToList();
                        }
                    }
                }
            }
        }
    }

    private void UpdateBooleanValue(MetricValueModel metricValue, bool value)
    {
        metricValue.BooleanValue = value;
    }

    private void UpdateCategoricalValue(MetricValueModel metricValue, string? value)
    {
        metricValue.CategoricalValue = value;
    }

    private async Task HandleSubmit()
    {
        if (student == null || subject == null || currentUser?.FamilyId == null)
        {
            ErrorMessage = "Student or subject not found.";
            return;
        }

        ErrorMessage = null;
        isLoading = true;

        var result = await DailyLogService.CreateDailyLogAsync(dailyLogModel);

        if (result.Succeeded)
        {
            NavigationManager.NavigateTo($"/DailyLogs");
        }
        else
        {
            ErrorMessage = result.ErrorMessage;
            isLoading = false;
        }
    }
}
