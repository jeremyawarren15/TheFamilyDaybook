@page "/Account/RegisterSuccess"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Identity
@using TheFamilyDaybook.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Registration Successful</PageTitle>

<div class="max-w-xl mx-auto">
    <div class="card">
        <div class="card-header">
            <h3 class="text-lg font-semibold text-gray-900">Registration Successful</h3>
        </div>
        <div class="card-body">
            <p class="text-gray-600">Your account has been created successfully. Signing you in...</p>
        </div>
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string? Email { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(Email))
        {
            var user = await UserManager.FindByEmailAsync(Email);
            if (user != null)
            {
                // Sign in via GET request - this allows cookies to be set properly
                await SignInManager.SignInAsync(user, isPersistent: false);
                // Small delay then redirect
                await Task.Delay(500);
                NavigationManager.NavigateTo("/");
            }
            else
            {
                NavigationManager.NavigateTo("/Account/Login");
            }
        }
        else
        {
            NavigationManager.NavigateTo("/Account/Login");
        }
    }
}
