@page "/Account/Profile"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using TheFamilyDaybook.Data
@using TheFamilyDaybook.Models
@using TheFamilyDaybook.Web.Services
@using TheFamilyDaybook.Web.ViewModels
@attribute [Authorize]
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IAccountService AccountService
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@rendermode InteractiveServer

<PageTitle>Profile</PageTitle>

<div class="max-w-2xl mx-auto px-4 sm:px-0">
    <div class="card">
        <div class="card-header">
            <h3 class="text-base sm:text-lg font-semibold text-gray-900">User Profile</h3>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger mb-6" role="alert">
                    @ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(SuccessMessage))
            {
                <div class="alert alert-success mb-6" role="alert">
                    @SuccessMessage
                </div>
            }

            @if (currentUser != null)
            {
                <EditForm Model="@profileModel" OnValidSubmit="@HandleUpdate">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-red-600 mb-4" />

                    <div class="mb-4">
                        <label class="form-label">Email</label>
                        <input type="text" class="form-input bg-gray-50 cursor-not-allowed" value="@currentUser.Email" disabled />
                        <small class="text-gray-500 text-sm mt-1 block">Email cannot be changed</small>
                    </div>

                    <div class="mb-4">
                        <label for="firstName" class="form-label">First Name</label>
                        <InputText id="firstName" class="form-input" @bind-Value="profileModel.FirstName" />
                        <ValidationMessage For="@(() => profileModel.FirstName)" />
                    </div>

                    <div class="mb-4">
                        <label for="lastName" class="form-label">Last Name</label>
                        <InputText id="lastName" class="form-input" @bind-Value="profileModel.LastName" />
                        <ValidationMessage For="@(() => profileModel.LastName)" />
                    </div>

                    <div class="flex flex-col sm:flex-row sm:justify-end gap-3">
                        <button type="submit" class="btn-primary w-full sm:w-auto" disabled="@isLoading">
                            @if (isLoading)
                            {
                                <span class="spinner spinner-sm inline-block mr-2"></span>
                            }
                            Update Profile
                        </button>
                    </div>
                </EditForm>
            }
            else
            {
                <p class="text-gray-600">Loading...</p>
            }
        </div>
    </div>
</div>

@code {
    private ApplicationUser? currentUser;
    private ProfileModel profileModel = new();
    private string? ErrorMessage;
    private string? SuccessMessage;
    private bool isLoading = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            currentUser = await UserManager.GetUserAsync(user);
            if (currentUser != null)
            {
                profileModel.FirstName = currentUser.FirstName ?? string.Empty;
                profileModel.LastName = currentUser.LastName ?? string.Empty;
            }
        }
    }

    private async Task HandleUpdate()
    {
        if (currentUser == null)
            return;

        ErrorMessage = null;
        SuccessMessage = null;
        isLoading = true;

        var result = await AccountService.UpdateProfileAsync(currentUser.Id, profileModel);

        if (result.Succeeded)
        {
            SuccessMessage = "Profile updated successfully.";
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            currentUser = await UserManager.GetUserAsync(authState.User);
        }
        else
        {
            ErrorMessage = result.ErrorMessage;
        }

        isLoading = false;
    }
}
