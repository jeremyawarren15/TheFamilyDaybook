@page "/Account/Register"
@using Microsoft.AspNetCore.Components.Authorization
@using TheFamilyDaybook.Web.Services
@using TheFamilyDaybook.Web.ViewModels
@inject IAccountService AccountService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@rendermode InteractiveServer

<PageTitle>Register</PageTitle>

<div class="max-w-xl mx-auto px-4 sm:px-0">
    <div class="card">
        <div class="card-header">
            <h3 class="text-base sm:text-lg font-semibold text-gray-900">Register</h3>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger mb-6" role="alert">
                    @ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(SuccessMessage))
            {
                <div class="alert alert-success mb-6" role="alert">
                    @SuccessMessage
                </div>
            }

            <EditForm Model="@registerModel" OnValidSubmit="@HandleRegister">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-red-600 mb-4" />

                <div class="mb-4">
                    <label for="firstName" class="form-label">First Name</label>
                    <InputText id="firstName" class="form-input" @bind-Value="registerModel.FirstName" />
                    <ValidationMessage For="@(() => registerModel.FirstName)" />
                </div>

                <div class="mb-4">
                    <label for="lastName" class="form-label">Last Name</label>
                    <InputText id="lastName" class="form-input" @bind-Value="registerModel.LastName" />
                    <ValidationMessage For="@(() => registerModel.LastName)" />
                </div>

                <div class="mb-4">
                    <label for="email" class="form-label">Email</label>
                    <InputText id="email" class="form-input" @bind-Value="registerModel.Email" />
                    <ValidationMessage For="@(() => registerModel.Email)" />
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label">Password</label>
                    <InputText id="password" type="password" class="form-input" @bind-Value="registerModel.Password" />
                    <ValidationMessage For="@(() => registerModel.Password)" />
                    <small class="text-gray-500 text-sm mt-1 block">
                        Password must be at least 8 characters and contain uppercase, lowercase, and a digit.
                    </small>
                </div>

                <div class="mb-4">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <InputText id="confirmPassword" type="password" class="form-input" @bind-Value="registerModel.ConfirmPassword" />
                    <ValidationMessage For="@(() => registerModel.ConfirmPassword)" />
                </div>

                <div class="mb-6">
                    <label for="familyName" class="form-label">Family Name (Optional)</label>
                    <InputText id="familyName" class="form-input" @bind-Value="registerModel.FamilyName" />
                    <small class="text-gray-500 text-sm mt-1 block">
                        If you're creating a new family, enter a name. If joining an existing family, leave blank and ask a family member to add you.
                    </small>
                </div>

                <button type="submit" class="btn-primary w-full" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner spinner-sm inline-block mr-2"></span>
                    }
                    Register
                </button>
            </EditForm>

            <div class="mt-6 text-center">
                <p class="text-gray-600 text-sm">
                    Already have an account? <a href="/Account/Login" class="text-burgundy hover:text-burgundy-dark font-medium">Log in</a>
                </p>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterModel registerModel = new();
    private string? ErrorMessage;
    private string? SuccessMessage;
    private bool isLoading = false;

    private async Task HandleRegister()
    {
        ErrorMessage = null;
        SuccessMessage = null;
        isLoading = true;

        var result = await AccountService.RegisterAsync(registerModel);

        if (result.Succeeded)
        {
            SuccessMessage = "Registration successful! Redirecting to login...";
            await Task.Delay(2000);
            NavigationManager.NavigateTo("/Account/Login");
        }
        else
        {
            ErrorMessage = result.ErrorMessage;
            isLoading = false;
        }
    }
}
