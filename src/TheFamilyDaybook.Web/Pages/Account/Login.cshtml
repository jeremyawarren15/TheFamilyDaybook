@page "/Account/Login"
@model TheFamilyDaybook.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null; // We'll use a simple layout for login
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Family Daybook</title>
    <base href="~/" />
    <link rel="stylesheet" href="~/app.css" />
    <link rel="icon" type="image/png" href="~/favicon.png" />
</head>
<body class="bg-creamy min-h-screen flex items-center justify-center">
<div class="max-w-md w-full mx-auto px-4">
    <div class="card">
        <div class="card-header">
            <h3 class="text-lg font-semibold text-gray-900">Login</h3>
        </div>
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mb-6" role="alert">
                    <ul class="list-disc list-inside space-y-1">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />
                <div asp-validation-summary="All" class="text-red-600 mb-4" role="alert"></div>
                
                <div class="mb-4">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <input asp-for="Input.Email" name="Input.Email" class="form-input" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="validation-message"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <input asp-for="Input.Password" name="Input.Password" class="form-input" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="validation-message"></span>
                </div>

                <div class="mb-6 flex items-center">
                    <input asp-for="Input.RememberMe" class="w-4 h-4 text-burgundy bg-gray-100 border-gray-300 rounded focus:ring-burgundy focus:ring-2" />
                    <label asp-for="Input.RememberMe" class="ml-2 text-sm text-gray-700">
                        Remember me
                    </label>
                </div>

                <button type="submit" class="btn-primary w-full">Login</button>
            </form>

            <div class="mt-6 text-center">
                <p class="text-gray-600">Don't have an account? <a href="/Account/Register" class="text-burgundy hover:text-burgundy-dark font-medium">Register here</a></p>
            </div>
        </div>
    </div>
</div>
</body>
</html>
